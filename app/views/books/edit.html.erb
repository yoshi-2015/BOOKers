<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>
<h4>
  <%= link_to "show", book_path %>
  <%= link_to "back", books_path %>
</h4>